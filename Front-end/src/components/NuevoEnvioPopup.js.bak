import React, { useState, useEffect } from 'react';
import Modal from 'react-modal';
import styled from 'styled-components';
import axios from 'axios';

const ModalContent = styled.div`
  background: #fff;
  padding: 20px;
  max-width: 900px;
  margin: 40px auto;
  border-radius: 10px;
`;

const Header = styled.div`
  text-align: center;
  margin-bottom: 20px;
`;

const FormGroup = styled.div`
  margin-bottom: 15px;
`;

const Label = styled.label`
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
`;

const Input = styled.input`
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 10px;
`;

const Select = styled.select`
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 10px;
`;

const ButtonGroup = styled.div`
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
`;

const Button = styled.button`
  background-color: ${(props) => (props.primary ? '#6ba292' : '#ccc')};
  color: ${(props) => (props.primary ? '#fff' : '#000')};
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;

  &:hover {
    background-color: ${(props) => (props.primary ? '#5a8a7d' : '#bbb')};
  }
`;

const NuevoEnvioPopup = ({ isOpen, onRequestClose, data }) => {
  const [selectedCountryRemitente, setSelectedCountryRemitente] = useState('');
  const [selectedCountryDestinatario, setSelectedCountryDestinatario] = useState('');
  const [citiesRemitente, setCitiesRemitente] = useState([]);
  const [citiesDestinatario, setCitiesDestinatario] = useState([]);
  const [remitente, setRemitente] = useState({
    nombre: '',
    email: '',
    telefono: '',
    pais: '',
    ciudad: '',
    tipoDocumento: '',
    numeroDocumento: '',
  });
  const [destinatario, setDestinatario] = useState({
    nombre: '',
    email: '',
    telefono: '',
    pais: '',
    ciudad: '',
    tipoDocumento: '',
    numeroDocumento: '',
  });
  const [cantidadPaquetes, setCantidadPaquetes] = useState(1);
  const [fechaEnvio, setFechaEnvio] = useState(new Date().toISOString().split('T')[0]);

  useEffect(() => {
    if (data && selectedCountryRemitente) {
      const filteredCities = data.cities.filter(city => city.countryId === parseInt(selectedCountryRemitente));
      setCitiesRemitente(filteredCities);
    } else {
      setCitiesRemitente([]);
    }
  }, [selectedCountryRemitente, data]);

  useEffect(() => {
    if (data && selectedCountryDestinatario) {
      const filteredCities = data.cities.filter(city => city.countryId === parseInt(selectedCountryDestinatario));
      setCitiesDestinatario(filteredCities);
    } else {
      setCitiesDestinatario([]);
    }
  }, [selectedCountryDestinatario, data]);

  if (!data) {
    return null;
  }

  const handleInputChange = (e, setState, state) => {
    const { name, value } = e.target;
    setState({ ...state, [name]: value });
  };

  const handleNumberInputChange = (e, setState, state) => {
    const { name, value } = e.target;
    if (/^\d*$/.test(value)) {
      setState({ ...state, [name]: value });
    }
  };

  const handleSubmit = async () => {
    try {
      const shipmentPayload = {
        cantidad: cantidadPaquetes,
        origenId: remitente.ciudad,
        destinoId: destinatario.ciudad,
        tipo: 1,
        fechaInicio: fechaEnvio,
        fechaFin: fechaEnvio,
        tiempoActivo: 0,
      };

      console.log("Shipment payload:", shipmentPayload);

      const shipmentResponse = await axios.post('http://localhost:8080/shipment/', shipmentPayload);
      const newShipmentId = shipmentResponse.data.id;

      for (let i = 0; i < cantidadPaquetes; i++) {
        const packagePayload = {
          originId: remitente.ciudad,
          destinationId: destinatario.ciudad,
          departureTime: '08:00:00',
          shipmentDateTime: fechaEnvio,
          packageId: `PKG${Math.floor(Math.random() * 100000)}`,
          quantity: 1,
          assignedFlightId: 1,
          tiempoTotal: 0,
          airportId: remitente.ciudad,
          estadoPaqueteId: 1,
          shipmentId: newShipmentId,
        };

        console.log("Package payload:", packagePayload);

        await axios.post('http://localhost:8080/package/', packagePayload);
      }

      alert('Envio creado exitosamente');
      onRequestClose();
    } catch (error) {
      console.error('Error creating envio:', error);
      if (error.response) {
        console.error('Error response data:', error.response.data);
        console.error('Error response status:', error.response.status);
        console.error('Error response headers:', error.response.headers);
      }
      alert('Error creando el envio');
    }
  };

  return (
    <Modal
      isOpen={isOpen}
      onRequestClose={onRequestClose}
      ariaHideApp={false}
      style={{
        overlay: {
          backgroundColor: 'rgba(0, 0, 0, 0.75)',
        },
        content: {
          top: '50%',
          left: '50%',
          right: 'auto',
          bottom: 'auto',
          marginRight: '-50%',
          transform: 'translate(-50%, -50%)',
          padding: 0,
          border: 'none',
          background: 'none',
        },
      }}
    >
      <ModalContent>
        <Header>
          <h2>Nuevo envío</h2>
        </Header>
        <FormGroup>
          <Label htmlFor="nombreRemitente">Nombre</Label>
          <Input
            type="text"
            name="nombre"
            id="nombreRemitente"
            placeholder="Nombre completo"
            onChange={(e) => handleInputChange(e, setRemitente, remitente)}
          />
          <Label htmlFor="emailRemitente">Correo electrónico</Label>
          <Input
            type="email"
            name="email"
            id="emailRemitente"
            placeholder="Correo electrónico"
            onChange={(e) => handleInputChange(e, setRemitente, remitente)}
          />
          <Label htmlFor="telefonoRemitente">Número de teléfono</Label>
          <Input
            type="tel"
            name="telefono"
            id="telefonoRemitente"
            placeholder="Número de teléfono"
            inputMode="numeric"
            onChange={(e) => handleNumberInputChange(e, setRemitente, remitente)}
          />
          <Label htmlFor="paisRemitente">País</Label>
          <Select name="pais" id="paisRemitente" onChange={(e) => setSelectedCountryRemitente(e.target.value)}>
            <option value="">Seleccione un país</option>
            {data.countries.map((country) => (
              <option key={country.id} value={country.id}>
                {country.name}
              </option>
            ))}
          </Select>
          <Label htmlFor="ciudadRemitente">Ciudad</Label>
          <Select name="ciudad" id="ciudadRemitente" onChange={(e) => handleInputChange(e, setRemitente, remitente)}>
            <option value="">Seleccione una ciudad</option>
            {citiesRemitente.map((city) => (
              <option key={city.id} value={city.id}>
                {city.nombre}
              </option>
            ))}
          </Select>
          <Label htmlFor="tipoDocumentoRemitente">Tipo de documento</Label>
          <Select name="tipoDocumento" id="tipoDocumentoRemitente" onChange={(e) => handleInputChange(e, setRemitente, remitente)}>
            <option value="">Tipo de documento</option>
            <option value="DNI">DNI</option>
            <option value="Pasaporte">Pasaporte</option>
          </Select>
          <Label htmlFor="numeroDocumentoRemitente">Número de documento</Label>
          <Input
            type="text"
            name="numeroDocumento"
            id="numeroDocumentoRemitente"
            placeholder="Número de documento"
            inputMode="numeric"
            onChange={(e) => handleNumberInputChange(e, setRemitente, remitente)}
          />
        </FormGroup>
        <FormGroup>
          <Label htmlFor="nombreDestinatario">Nombre</Label>
          <Input
            type="text"
            name="nombre"
            id="nombreDestinatario"
            placeholder="Nombre completo"
            onChange={(e) => handleInputChange(e, setDestinatario, destinatario)}
          />
          <Label htmlFor="emailDestinatario">Correo electrónico</Label>
          <Input
            type="email"
            name="email"
            id="emailDestinatario"
            placeholder="Correo electrónico"
            onChange={(e) => handleInputChange(e, setDestinatario, destinatario)}
          />
          <Label htmlFor="telefonoDestinatario">Número de teléfono</Label>
          <Input
            type="tel"
            name="telefono"
            id="telefonoDestinatario"
            placeholder="Número de teléfono"
            inputMode="numeric"
            onChange={(e) => handleNumberInputChange(e, setDestinatario, destinatario)}
          />
          <Label htmlFor="paisDestinatario">País</Label>
          <Select name="pais" id="paisDestinatario" onChange={(e) => setSelectedCountryDestinatario(e.target.value)}>
            <option value="">Seleccione un país</option>
            {data.countries.map((country) => (
              <option key={country.id} value={country.id}>
                {country.name}
              </option>
            ))}
          </Select>
          <Label htmlFor="ciudadDestinatario">Ciudad</Label>
          <Select name="ciudad" id="ciudadDestinatario" onChange={(e) => handleInputChange(e, setDestinatario, destinatario)}>
            <option value="">Seleccione una ciudad</option>
            {citiesDestinatario.map((city) => (
              <option key={city.id} value={city.id}>
                {city.nombre}
              </option>
            ))}
          </Select>
          <Label htmlFor="tipoDocumentoDestinatario">Tipo de documento</Label>
          <Select name="tipoDocumento" id="tipoDocumentoDestinatario" onChange={(e) => handleInputChange(e, setDestinatario, destinatario)}>
            <option value="">Tipo de documento</option>
            <option value="DNI">DNI</option>
            <option value="Pasaporte">Pasaporte</option>
          </Select>
          <Label htmlFor="numeroDocumentoDestinatario">Número de documento</Label>
          <Input
            type="text"
            name="numeroDocumento"
            id="numeroDocumentoDestinatario"
            placeholder="Número de documento"
            inputMode="numeric"
            onChange={(e) => handleNumberInputChange(e, setDestinatario, destinatario)}
          />
        </FormGroup>
        <FormGroup>
          <Label htmlFor="fechaEnvio">Fecha de envío</Label>
          <Input
            id="fechaEnvio"
            type="date"
            value={fechaEnvio}
            onChange={(e) => setFechaEnvio(e.target.value)}
          />
        </FormGroup>
        <FormGroup>
          <Label htmlFor="cantidadPaquetes">Cantidad de paquetes</Label>
          <Input
            id="cantidadPaquetes"
            type="number"
            placeholder="Cantidad de paquetes"
            value={cantidadPaquetes}
            onChange={(e) => setCantidadPaquetes(e.target.value)}
          />
        </FormGroup>
        <ButtonGroup>
          <Button onClick={onRequestClose}>Cancelar</Button>
          <Button primary="true" onClick={handleSubmit}>Crear envío</Button>
        </ButtonGroup>
      </ModalContent>
    </Modal>
  );
};

export default NuevoEnvioPopup;
